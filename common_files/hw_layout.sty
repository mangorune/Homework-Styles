% Drop-in Statements

\newcommand{\rightsNotice}{%
  \@ifundefined{\rightsStatement}{}{%
    \begin{tabular}{m{2.75cm} m{8.5cm}}
      \raisebox{-0.5\height}{%
      \href{\rightsURL{}}{%
      \XeTeXLinkBox{%
      \includegraphics[width=2.75cm]{\rightsImage{}}
      }}}
      &
        \sf\footnotesize\setstretch{1.0}
        \rightsStatement{}
    \end{tabular}
  }
}

\newcommand{\rightsBar}{%
  \@ifundefined{\rightsImageBar}{}{%
    \raisebox{-0.5\height}{%
      \href{\rightsURL{}}{%
        \XeTeXLinkBox{%
          \includegraphics[height=\baselineskip]{\rightsImageBar{}}
        }}}}
}

% Apply rights to the output document
\iftoggle{rights}{%
  \hypersetup{
    pdfcopyright={\@ifundefined{\rightsStatement}{}{\rightsStatement{}}},
    pdflicenseurl={\@ifundefined{\rightsURL}{}{\rightsURL{}}}
  }
  \lfoot{\rightsBar{}}%
  \fancypagestyle{fancytitle}{%
    \renewcommand{\headrulewidth}{0pt}%
    \fancyhf{}%
    \fancyfoot[L]{\rightsBar{}}%
    \fancyfoot[C]{\sc \thepage\ of \pageref{LastPage}}%
  }
}{%
  % Change nothing if rights not applied.
}

